<!-- 編集ページ -->
<div class="text-center mb-4">
  <h1>お店投稿編集</h1>
</div>

<div class="row">
  <div class="col-sm-8 offset-sm-2 mb-5">
    <%= form_with(model: @review, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="text-center mb-3">
        <%= image_tag @review.image.thumb1.url, width: '100%' %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>
      
      <div class="form-group">
        <%= f.label :name, '店名' %>
        <%= f.text_field :name, value: @review.shop.name, class: 'form-control', readonly: true %>
        <div class="input-group">
          <input class="form-control" type="text" id="key">
          <input class="btn btn-success" type="button" id="search" value="検索">
        </div>
        <ul class="list-unstyled" id="ul"></ul>
      </div>
  
      <div class="form-group">
        <%= f.label :recommend, 'おすすめのお酒（任意）' %>
        <%= f.text_field :recommend, class: 'form-control' %>
      </div>
          
      <div class="form-group">
        <%= f.label :genre_id, 'お店のジャンル' %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'form-control'} %>
      </div>
          
      <div class="form-group">
        <%= f.label :content, 'レビュー、紹介' %>
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
          
      <div class="text-center">
        <%= f.submit '編集', class: 'btn btn-outline-primary w-25' %>
      </div>
    <% end %>
  </div>
</div>
