<!-- お気に入りボタン -->
<% if current_user.liking?(review) %>
  <%= form_with(model: current_user.likes.find_by(review_id: review.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit 'お気に入り中', class: 'btn btn-primary' %>
  <% end %>
<% else%>
  <%= form_with(model: current_user.likes.build, local: true) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-outline-primary' %>
  <% end %>
<% end %>