<!-- ユーザ詳細ページ -->
<div class="text-center mb-5">
  <h3 class="mb-4"><%= @user.name%>さん</h3>
  <% if @user.image? %>
    <%= image_tag @user.image.thumb.url %>
  <% else %>
    <%= image_tag "/assets/acountdefault.jpg" %>
  <% end %>
  
  <% if @user.content? %>
    <p class="mt-4"><%= @user.content %></p>
  <% else %>
    <p class="mt-4">コメント未登録</p>
  <% end %>
</div>

